{
  "manifest_version": 3,
  "name": "BetterTabTool",
  "version": "0.1.0",
  "permissions": ["tabs", "storage", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BetterTabTool"
  },
  "commands": {
    "copy-current-tab-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Copies the current tab's URL to the clipboard"
    }
  }
}